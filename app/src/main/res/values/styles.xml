<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextAppearance styles start-->
    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="TextAppearance.H1">
        <item name="android:textSize">@dimen/text_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_line</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.H2">
        <item name="android:textSize">@dimen/text_h2_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h2_line</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.H3">
        <item name="android:textSize">@dimen/text_h3_size</item>
        <item name="lineHeight">@dimen/text_h3_line</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="lineHeight">@dimen/text_title_line</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="TextAppearance.Subtitle">
        <item name="android:textSize">@dimen/text_subtitle_size</item>
        <item name="lineHeight">@dimen/text_subtitle_line</item>
        <item name="android:textColor">@color/silver_chalice</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="lineHeight">@dimen/text_small_line</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.TextField">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextAppearance.TextField.Hint">
        <item name="android:textSize">@dimen/text_hint_size</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="lineHeight">@dimen/text_subtitle_line</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="fontStyle">normal</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextAppearance.Body2">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="lineHeight">@dimen/text_subtitle_line</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="fontStyle">normal</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextAppearance.AppBarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Caption">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_caption_size</item>
        <item name="lineHeight">@dimen/text_caption_line</item>
    </style>
    <!-- TextAppearance styles end-->

    <!-- TextInputLayout styles start-->
    <style name="Theme.CowboysStore.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/seashell</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="lineHeight">@dimen/text_hint_line</item>
        <item name="boxStrokeColor">@color/text_field_box_stroke_color</item>
        <item name="shapeAppearance">@style/Theme.Cowboys.ShapeAppearanceTextInputLayout</item>
        <item name="android:textAppearance">@style/TextAppearance.TextField</item>
        <item name="hintTextAppearance">@style/TextAppearance.TextField.Hint</item>
        <item name="hintTextColor">@color/silver_chalice</item>
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="boxStrokeErrorColor">@color/red_input_failure</item>
        <item name="errorTextColor">@color/red_input_failure</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxCornerRadiusTopStart">@dimen/normal_50</item>
        <item name="boxCornerRadiusTopEnd">@dimen/normal_50</item>
    </style>

    <style name="Theme.Cowboys.ShapeAppearanceTextInputLayout" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/normal_100</item>
    </style>
    <!-- TextInputLayout styles end -->

    <!-- Button styles start -->
    <style name="Theme.CowboysStore.Button" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="lineHeight">@dimen/text_button_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/smalt</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="Theme.CowboysStore.Button.Small">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:letterSpacing">0.125</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/smalt</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Button styles end-->

    <!--TabLayout item styles start-->
    <style name="TabItem">
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="lineHeight">@dimen/text_button_line</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="textAllCaps">true</item>
    </style>
    <!--TabLayout item styles end-->

    <!--Alert Dialog styles start-->
    <style name="Theme.CowboysStore.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@drawable/rounded_corner_dialog_background</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Theme.CowboysStore.AlertDialog.Button</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Theme.CowboysStore.AlertDialog.Button</item>
    </style>

    <style name="Theme.CowboysStore.AlertDialog.Button" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/smalt</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.125</item>
    </style>
    <!--Alert Dialog styles end-->

    <!--Date Formatter styles start-->
    <style name="Theme.CowboysStore.DatePicker" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorAccent">@color/smalt</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/smalt</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item>   <!--days of the month-->
        <item name="android:textColorSecondary">@color/black_20pc</item>    <!--days of the week-->
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:dayOfWeekTextAppearance">@style/Theme.CowboysStore.DatePicker.DayOfWeekTextAppearance</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Theme.CowboysStore.AlertDialog.Button</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Theme.CowboysStore.AlertDialog.Button</item>
    </style>

    <style name="Theme.CowboysStore.DatePicker.DayOfWeekTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/red_input_failure</item>
    </style>
    <!--Date Formatter styles end-->
</resources>