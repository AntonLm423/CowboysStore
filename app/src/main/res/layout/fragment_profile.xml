<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/topView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarProfile"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/smalt"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="@color/white">

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <!--TODO(TOOLBAR)-->
        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:background="@color/smalt"
            app:layout_constraintTop_toBottomOf="@id/appBarLayoutProfile"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageViewUserAvatar"
            android:layout_width="90dp"
            android:layout_height="82dp"
            android:layout_marginBottom="@dimen/normal_100"
            app:layout_constraintBottom_toTopOf="@id/textViewUserName"
            app:layout_constraintEnd_toEndOf="@+id/topView"
            app:layout_constraintHeight_max="90dp"
            app:layout_constraintStart_toStartOf="@+id/topView"
            app:layout_constraintTop_toTopOf="@+id/topView"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_max="90dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewUserName"
            style="@style/TextAppearance.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Анна Виноградова"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/imageViewUserAvatar"
            app:layout_constraintBottom_toTopOf="@+id/textViewUserPosition"
            app:layout_constraintStart_toStartOf="@+id/topView"
            app:layout_constraintEnd_toEndOf="@+id/topView" />

        <TextView
            android:id="@+id/textViewUserPosition"
            style="@style/TextAppearance.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Разработчик"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/textViewUserName"
            app:layout_constraintBottom_toBottomOf="@+id/topView"
            app:layout_constraintStart_toStartOf="@+id/topView"
            app:layout_constraintEnd_toEndOf="@+id/topView"
            android:layout_marginBottom="@dimen/normal_100" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flow_horizontalBias="0.5"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topView"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="24dp"
            tools:itemCount="3"
            tools:listitem="@layout/item_menu"
            tools:orientation="horizontal" />

        <TextView
            android:id="@+id/textViewAppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_app_version"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/silver_chalice"
            android:textSize="14sp"
            android:lineHeight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewMenu"
            app:layout_constraintVertical_bias="1"
            android:layout_marginBottom="@dimen/normal_100"/>

            <ProgressBar
                android:id="@+id/progressBasAppVersion"
                style="@android:style/Widget.Material.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                app:layout_constraintTop_toTopOf="@id/textViewAppVersion"
                app:layout_constraintBottom_toBottomOf="@id/textViewAppVersion"
                app:layout_constraintStart_toStartOf="@id/textViewAppVersion"
                app:layout_constraintEnd_toEndOf="@id/textViewAppVersion"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>